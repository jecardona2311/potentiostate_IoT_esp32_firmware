{
  "name": "potentiostat-iot-backend",
  "version": "1.0.0",
  "description": "Backend for IoT system of potentiostat with biosensors, using MQTT and PostgreSQL, developed in Node.js with Express.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:setup": "psql -U postgres -f ../database.sql",
    "db:reset": "psql -U postgres -c 'DROP DATABASE IF EXISTS potentiostat_iot;' && npm run db:setup"
  },
  "keywords": [
    "iot",
    "potentiostat",
    "mqtt",
    "biosensors",
    "cyclic-voltammetry",
    "esp32"
  ],
  "author": "Juan E. Cardona",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "mqtt": "^5.3.5",
    "dotenv": "^16.3.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}